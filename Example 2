#include <stdio.h>
#include <math.h>

int main()
{

 float P,R,T,SI,CI;

 printf("Enter Rate of Intrest: ");
 scanf("%f",&R);

 printf("Enter Time Period in Years: ");
 scanf("%f",&T);

 printf("Enter Principle Amount: ");
 scanf("%f",&P);


 SI=(P*R*T/100);

 printf("\n Simple Intrest for this period will be: %.2f",SI);



 CI=(P*pow((1+R/100),T))-P;

 printf("\n Compound Intrest for this period will be: %.2f",CI);

 return 0;
}
